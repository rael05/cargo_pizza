<div class="px-5 pt-3 pb-4 bg-dark rounded shadow mb-4">
    <h1 class="text-center"><%= title %></h1>
    <div class="card-group g-2">
        <% pending_orders.each do |order| %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="<%= show_order_path(order) %>">
                            Ã“rden #<%= order.id %>
                        </a>
                    </h5>
                    <h6 class="card-subtitle mt-2 text-body-secondary">Direccion a entregar:</h6>
                    <p class="card-text">
                        <%= order.customer.address %>
                    </p>
                    <h6 class="card-subtitle mt-2 text-body-secondary">Cliente:</h6>
                    <p class="card-text m-0">
                        <%= order.customer.full_name %>
                    </p>
                    <p class="card-text m-0">
                        <%= order.customer.mail %>
                    </p>
                    <p class="card-text m-0">
                        <%= order.customer.phone_display %>
                    </p>
                    <h6 class="card-subtitle mt-2 text-body-secondary">Mesero:</h6>
                    <p class="card-text m-0">
                        <%= order.employee.full_name %>
                    </p>
                    <p class="card-text m-0">
                        <%= order.employee.email %>
                    </p>
                    <p class="card-text m-0">
                        <%= order.employee.phone_display %>
                    </p>
                </div>
                <div class="card-footer">
                    <small class="text-body-secondary">
                        Estado: <%= order.status_name %> <br>
                        Fecha de creacion: <%= order.created_at.strftime("%d/%m/%Y") %> <br>
                        Hora: <%= order.created_at.strftime("%I:%M%p") %>
                    </small>
                </div>
            </div>
        <% end %>
    </div>
</div>