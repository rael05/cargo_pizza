<div class="px-5 pt-3 pb-4 bg-dark rounded shadow">

  <p style="color: green"><%= notice %></p>

  <%= render @product %>

  <div>
    <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-success" %> |
    <%= link_to "Back to products", products_path, class: "btn btn-light" %>

    <%= button_to "Destroy this product", @product, method: :delete, class: "btn btn-danger mt-2" %>
  </div>

</div>