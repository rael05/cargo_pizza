<div id="<%= dom_id customer %>">
  <p>
    <strong>Name:</strong>
    <%= customer.name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= customer.last_name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= customer.address %>
  </p>

  <p>
    <strong>Mail:</strong>
    <%= customer.mail %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= customer.phone %>
  </p>

</div>
