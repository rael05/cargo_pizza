<div class="px-5 pt-3 pb-4 bg-dark rounded shadow">
  <p style="color: green"><%= notice %></p>

  <%= render @customer %>

  <div>
    <%= link_to "Edit this customer", edit_customer_path(@customer), class: "btn btn-success" %> |
    <%= link_to "Back to customers", customers_path, class: "btn btn-light" %>

    <%= button_to "Destroy this customer", @customer, method: :delete, class: "btn btn-danger mt-2" %>
  </div>
</div>